{
  "name": "claude-eidetic",
  "version": "0.1.3",
  "description": "Semantic code search MCP server â€” lean, correct, fast",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-eidetic": "dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*",
    "!dist/__tests__/**",
    "!dist/**/tests/**",
    "!dist/e2e/**",
    "messages.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config vitest.integration.config.ts",
    "test:eval": "tsx scripts/eval/recall-at-k.ts && tsx scripts/eval/fusion-lift.ts && tsx scripts/eval/ndcg.ts",
    "test:eval:generate": "tsx scripts/eval/generate-queries.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "bash scripts/release.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@qdrant/js-client-rest": "^1.13.0",
    "better-sqlite3": "^12.6.2",
    "glob": "^11.0.0",
    "openai": "^5.1.1",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c-sharp": "^0.21.0",
    "tree-sitter-cpp": "^0.22.0",
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "yaml": "^2.8.2",
    "zod": "^3.25.0"
  },
  "optionalDependencies": {
    "@zilliz/milvus2-sdk-node": "^2.5.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "@grpc/grpc-js": "^1.8.22"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eidetics/claude-eidetic.git"
  },
  "license": "MIT"
}
